@model WebApplication5.Models.SignUp

@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="rounded content-form col-sm-5 ">
    
    
    <form asp-controller="Home" asp-action="SignUp" method="post">


        <div class="form-group">
            <label for="name">Adınız</label>

            <input type="text" asp-for="Firstname" required class="form-control">
        </div>

        <div class="form-group">
            <label for="name">Soyadınız</label>
            <input type="text" asp-for="Lastname" required class="form-control">
        </div>

        <div class="form-group">
            <label for="phone_no">Telefon Numarası</label>
            <input asp-for="Phonenum" type="text" pattern="^\d{10}$" required class="form-control">
        </div>

        <div class="form-group">

            <label for="email">E-mail</label>
            <input type="email" asp-for="Email" required class="form-control" />

        </div>


        <div class="form-group">
            <label for="password">Şifreniz</label>
            <input type="password" class="form-control" asp-for="Password" minlength="8" maxlength="12"  placeholder="Şifreniz" title="Must contain at least one number and one uppercase and lowercase letter, and at least 8 or more characters" required>
        </div>



        <div class="form-group">
            <label for="name">Doğum Tarihiniz</label>
            <input type="date" format="dd-mm-yyyy"asp-for="Dogumtarihi" required class="form-control" />
        </div>



        <div class="form-group">
            <label for="tckimlik_no">TC Kimlik No</label>
            <input asp-for="Tckimlik_no" type="number" pattern="^\d{11}$" required class="form-control">
        </div>


        <div class="text-center">

            <input type="submit" class="btn btn-primary btn-lg" value="Kaydet" />

        </div>

    </form>

</div>



